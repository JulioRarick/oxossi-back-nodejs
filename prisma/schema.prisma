generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER_MEMBER
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  password_hash String
  role          Role     @default(USER_MEMBER)
  created_at    DateTime @default(now())

  @@map("users")
}

model Dados {
  store_id    String  @id
  id_X        String?
  ref         String?
  datas       String?
  Anol        String?
  AnoF        String?
  periodoA    String?
  nomes       String?
  capitania   String?
  lugares     String?
  temas       String?
  tematicas   String?
  temaPercent String?
  autores     String?
  titulo      String?
  anoPub      String?
  fonte       String?
  link        String?

  @@map("dados")
}

model Det {
  store_id  String  @id
  id_X      String?
  obra      String?
  pagina    String?
  tipologia String?
  info      String?

  @@map("det")
}
